<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical" 
    android:gravity="center_horizontal">

    <GridLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:columnCount="2"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_call"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center" >

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:gravity="center"
                    android:src="@drawable/circle_log"
                    android:tint="@color/log_red" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:padding="40dp"
                    android:src="@drawable/call"
                    android:tint="@color/log_red" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Call"
                android:textColor="@color/log_red"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_sms"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center" >

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:gravity="center"
                    android:src="@drawable/circle_log"
                    android:tint="@color/log_violet" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:padding="40dp"
                    android:src="@drawable/sms"
                    android:tint="@color/log_violet" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="SMS"
                android:textColor="@color/log_violet"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_gallery"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:gravity="center" >

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:gravity="center"
                    android:src="@drawable/circle_log"
                    android:tint="@color/log_orange" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:padding="40dp"
                    android:src="@drawable/gallery"
                    android:tint="@color/log_orange" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Gallery"
                android:textColor="@color/log_orange"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_card"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:gravity="center" >

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:gravity="center"
                    android:src="@drawable/circle_log"
                    android:tint="@color/log_yellow" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:padding="40dp"
                    android:src="@drawable/card"
                    android:tint="@color/log_yellow" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Card"
                android:textColor="@color/log_yellow"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_bookmark"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:gravity="center" >

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:gravity="center"
                    android:src="@drawable/circle_log"
                    android:tint="@color/log_green" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:padding="40dp"
                    android:src="@drawable/bookmark"
                    android:tint="@color/log_green" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="BookMark"
                android:textColor="@color/log_green"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_location"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:gravity="center" >

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:gravity="center"
                    android:src="@drawable/circle_log"
                    android:tint="@color/log_blue" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:padding="40dp"
                    android:src="@drawable/location"
                    android:tint="@color/log_blue" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Location"
                android:textColor="@color/log_blue"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </GridLayout>

</RelativeLayout>