<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/item_txt_call_nolog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="no log"
        android:visibility="gone"
        android:textColor="@color/diary_edit_edittext_hint"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/layout_item_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/shape_log"
        android:orientation="horizontal"
        android:padding="5dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/item_img_call"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_txt_name_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/point"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_txt_number_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="number"
                android:textColor="@color/diary_title" />

            <TextView
                android:id="@+id/item_txt_date_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textColor="@color/diary_title" />

            <TextView
                android:id="@+id/item_txt_duration_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="통화시간"
                android:textColor="@color/diary_title" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>